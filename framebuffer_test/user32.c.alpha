#include "system32.h"
#include "system32.c"

void _user_start()
{

	String string1 = "ALOHA!\n\tHello World, Everyone!\0";
	String string2 = "Konnichiwa!\n\tSekai No Minasan!\0";
	String string3 = "0b1000,0xFB,255,0b1111\0";
	String string4 = "0.01,0.1,3.01,4.1,5.01,6.1,7.2222\0";
	String string5 = "0.4,2.0,3.0,4.0\0";
	String string6 = "2.0,3.0,4.0,5.0\0";
	String newline = "\n\0";
	FB32_X_CARET = 0;
	FB32_Y_CARET = 200;
	uint32 color = COLOR32_WHITE;
	uint32 back_color = COLOR32_BLACK;
	uint32 clear_color = COLOR32_NAVYBLUE;
	float32 start_fdegree = -90.0;
	float32 end_fdegree = 20.0;

	print32_set_caret( print32_string( string1, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( string1 ), 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( string2, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( string2 ), 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	char8 char_key = 0x65; // "e"

	int32 search_char = print32_charindex( string1, char_key );

	uint32 count_char = print32_charcount( string1, print32_strlen( string1 ), char_key );

	int32 search_string = print32_strindex( string1, "HA!" );

	String copy_string1 = (String)heap32_malloc(7); // 28 Bytes

	copy_string1[0] = 0x56; // "V"
	copy_string1[1] = 0x57; // "W"
	copy_string1[2] = 0x58; // "X"
	copy_string1[3] = 0x59; // "Y"
	copy_string1[4] = 0x5A; // "Z"
	copy_string1[5] = 0x0; // "\0"

	String copy_string2 = (String)heap32_malloc(7); // 28 Bytes

	uint32 error = heap32_mcopy( (uint32)copy_string2, (uint32)copy_string1, 1, 3 );

	print32_set_caret( print32_number( (uint32)search_char, FB32_X_CARET, FB32_Y_CARET, color, back_color, 8, 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	print32_set_caret( print32_number( count_char, FB32_X_CARET, FB32_Y_CARET, color, back_color, 8, 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	print32_set_caret( print32_number( (uint32)search_string, FB32_X_CARET, FB32_Y_CARET, color, back_color, 8, 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	print32_set_caret( print32_string( copy_string1, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( copy_string1 ), 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	print32_set_caret( print32_string( copy_string2, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( copy_string2 ), 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	print32_set_caret( print32_number( (uint32)error, FB32_X_CARET, FB32_Y_CARET, color, back_color, 8, 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	obj string3_obj = decix32_string_to_intarray( string3, print32_strlen( string3 ), 0 );
	//String dup_string3 = decix32_intarray_to_string_deci( string3_obj, 0, 1, 1 );
	String dup_string3 = decix32_intarray_to_string_hexa( string3_obj, 0, 1, 1, 1 );

	print32_set_caret( print32_string( dup_string3, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( dup_string3 ), 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	obj string4_obj = decix32_string_to_farray( string4, print32_strlen( string4 ) );
	String dup_string4 = decix32_farray_to_string( string4_obj, 1, 8, 0 );

	print32_set_caret( print32_string( dup_string4, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( dup_string4 ), 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	obj array_string = print32_strlist( dup_string4, print32_strlen( dup_string4 ), 0x2C );

	uint32 length_array_string = heap32_mcount( array_string );
	print32_set_caret( print32_number( length_array_string, FB32_X_CARET, FB32_Y_CARET, color, back_color, 8, 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	for ( uint32 i = 0; i < length_array_string; i+=4 ) {
		String array_string_part = (String)_load_32( array_string + i );
		print32_set_caret( print32_string( array_string_part, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( array_string_part ), 8, 12, FONT_MONO_12PX_ASCII ) );
		print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );
		print32_set_caret( print32_number( length_array_string, FB32_X_CARET, FB32_Y_CARET, color, back_color, 8, 8, 12, FONT_MONO_12PX_ASCII ) );
		print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );
		heap32_mfree( (uint32)array_string_part );
	}

	print32_set_caret( print32_number( length_array_string, FB32_X_CARET, FB32_Y_CARET, color, back_color, 8, 8, 12, FONT_MONO_12PX_ASCII ) );
	print32_set_caret( print32_string( newline, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( newline ), 8, 12, FONT_MONO_12PX_ASCII ) );

	heap32_mfree( array_string );
	heap32_mfree( (obj)copy_string1 );
	heap32_mfree( (obj)copy_string2 );
	heap32_mfree( string3_obj );
	heap32_mfree( (obj)dup_string3 );
	heap32_mfree( string4_obj );
	heap32_mfree( (obj)dup_string4 );

	obj string5_obj = decix32_string_to_farray( string5, print32_strlen( string5 ) );
	obj string6_obj = decix32_string_to_farray( string6, print32_strlen( string6 ) );

	//obj answer_obj = math32_mat_multiply( string5_obj, string6_obj, 2 );
	//obj answer_obj = math32_mat_identity( 3 );
	//obj answer_obj = math32_vec_normalize( string5_obj, 4 );
	obj answer_obj = math32_vec_crossproduct( string5_obj, string6_obj );
	String answer_string = decix32_farray_to_string( answer_obj, 0, 20, 0 );

	//float32 answer_float = math32_vec_dotproduct( string5_obj, string6_obj, 4 );
	//String answer_string = deci32_float32_to_string( answer_float, 0, 20, 0 );

	print32_set_caret( print32_string( answer_string, FB32_X_CARET, FB32_Y_CARET, color, back_color, print32_strlen( answer_string ), 8, 12, FONT_MONO_12PX_ASCII ) );

	heap32_mfree( answer_obj );
	heap32_mfree( (obj)answer_string );

	_sleep( 10000000 );

	arm32_convert_endianness( DATA_COLOR32_SAMPLE_IMAGE0, DATA_COLOR32_SAMPLE_IMAGE0_SIZE, 4 );
	draw32_rgba_to_argb( DATA_COLOR32_SAMPLE_IMAGE0, DATA_COLOR32_SAMPLE_IMAGE0_SIZE );
	draw32_change_alpha_argb( DATA_COLOR32_SAMPLE_IMAGE0, DATA_COLOR32_SAMPLE_IMAGE0_SIZE, 0x99 );

	arm32_convert_endianness( DATA_COLOR32_SAMPLE_IMAGE1, DATA_COLOR32_SAMPLE_IMAGE1_SIZE, 4 );
	draw32_rgba_to_argb( DATA_COLOR32_SAMPLE_IMAGE1, DATA_COLOR32_SAMPLE_IMAGE1_SIZE );
	
	while(1) {
		fb32_clear_color( clear_color );
		draw32_line( COLOR32_BLUE, -50, 800, 100, 100, 20, 20 );
		draw32_circle( COLOR32_CYAN, -100, 500, 200, 175 );
		draw32_arc( COLOR32_WHITE, 200, 200, 200, 200, math32_degree_to_radian( start_fdegree ), math32_degree_to_radian( end_fdegree ), 10, 1 );
		fb32_image( DATA_COLOR32_SAMPLE_IMAGE0, 400, 500, 64, 64, 0, 0, 0, 0 );
		fb32_image( DATA_COLOR32_SAMPLE_IMAGE1, 500, 500, 64, 64, 0, 0, 0, 0 );
		//clear_color += 20;
		start_fdegree = vfp32_fadd( start_fdegree, 3.0 );
		if ( vfp32_fgt( start_fdegree, 360.0 ) ) start_fdegree = -360.0;
		end_fdegree = vfp32_fadd( end_fdegree, 3.0 );
		if ( vfp32_fgt( end_fdegree, 360.0 ) ) end_fdegree = -360.0;
		_sleep( 100000 );
	}
}